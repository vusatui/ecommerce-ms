# Build the docker image with `npx nx docker-build orders-service`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t orders-service`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system orders-service && \
          adduser --system -G orders-service orders-service

COPY apps/orders-service/dist orders-service/
RUN chown -R orders-service:orders-service .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix orders-service --omit=dev -f install

CMD [ "node", "orders-service" ]
